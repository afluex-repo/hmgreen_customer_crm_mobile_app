<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:paddingStart="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="0dp"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl_clickmenu"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackground"
                    >
                    <ImageView
                        android:id="@+id/backarrow"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baseline_arrow_back_24" />
                    <ImageButton
                        android:id="@+id/img_side_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="40dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/roundlogo"
                        android:scaleX="0.9"
                        android:scaleY="0.9" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/hm_green_city"
                    android:textAppearance="@style/TextField_Bold"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tvSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:drawableEnd="@drawable/ic_funnel" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/textContainer"
        android:layout_marginRight="11dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/appbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textStyle="bold"
            android:id="@+id/tvall"
            android:textAlignment="center"
            android:text="@string/all"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textStyle="bold"
        android:id="@+id/tvbooked"
        android:textAlignment="center"
        android:text="@string/booked"
        android:textSize="12sp"
        android:background="@drawable/color_gradient_booked"
        android:textColor="@color/black"
        android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="@string/available"
            android:textSize="12sp"
            android:id="@+id/tvavail"
            android:textAlignment="center"
            android:textStyle="bold"
             android:background="#69ce69"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/tvalot"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="@string/alloted"
            android:textColor="@color/black"
            android:background="@drawable/color_alloted_gradient"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/tvreg"
            android:textAlignment="center"
             android:textStyle="bold"
            android:text="@string/registered"
            android:textSize="12sp"
            android:background="#c10202"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/textContainer1"
        android:layout_marginRight="11dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textContainer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text=""
            android:id="@+id/total_number_of_plot"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/green_color"
            android:layout_weight="1"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textContainer1"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="4dp" />

</RelativeLayout>
