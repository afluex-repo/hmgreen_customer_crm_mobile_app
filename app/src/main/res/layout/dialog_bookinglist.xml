<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tv_start_date"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/box_bg"
        android:drawableStart="@drawable/ic_calendar"
        android:drawablePadding="8dp"
        android:hint="Start Date"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_end_date"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableLeft="@drawable/ic_calendar" />

    <TextView
        android:id="@+id/tv_end_date"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/box_bg"
        android:drawableStart="@drawable/ic_calendar"
        android:drawablePadding="8dp"
        android:hint="End Date"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_start_date"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableLeft="@drawable/ic_calendar" />

    <TextView
        android:id="@+id/tv_select_site"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/box_bg"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:drawableEnd="@drawable/ic_arrow_down_sign_to_navigate"
        android:hint="Select Site"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@+id/tv_sector"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_date"
        android:layout_marginLeft="8dp"
        android:drawableRight="@drawable/ic_arrow_down_sign_to_navigate" />

    <TextView
        android:id="@+id/tv_sector"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/box_bg"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:hint="Select Phase"
        android:singleLine="true"
        android:drawableEnd="@drawable/ic_arrow_down_sign_to_navigate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_select_site"
        app:layout_constraintTop_toBottomOf="@+id/tv_end_date"
        android:drawableRight="@drawable/ic_arrow_down_sign_to_navigate" />

    <TextView
        android:id="@+id/select_block"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/box_bg"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:hint="Select Block"
        android:singleLine="true"
        android:drawableEnd="@drawable/ic_arrow_down_sign_to_navigate"
        app:layout_constraintEnd_toStartOf="@+id/et_plot_number"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sector"
        android:layout_marginLeft="8dp"
        android:drawableRight="@drawable/ic_arrow_down_sign_to_navigate" />



    <EditText
        android:id="@+id/et_plot_number"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/box_bg"
        android:drawablePadding="8dp"
        android:hint="Plot Number"

        android:padding="8dp"
        android:textSize="14dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/select_block"
        app:layout_constraintTop_toBottomOf="@+id/tv_sector" />
    <EditText
        android:id="@+id/et_associateId"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/box_bg"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:hint="Customer name"
        android:singleLine="true"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/et_customerID"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_block"
        android:layout_marginLeft="8dp"
        />



    <EditText
        android:id="@+id/et_customerID"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/box_bg"
        android:drawablePadding="8dp"
        android:hint="CustomerID"
        android:padding="8dp"
        android:textSize="14dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et_associateId"
        app:layout_constraintTop_toBottomOf="@+id/select_block" />



    <EditText

        android:id="@+id/et_booking_number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/box_bg"
        android:hint="Booking No"
        android:imeOptions="actionDone"
        android:inputType="textCapWords"
        android:padding="8dp"
        android:singleLine="true"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/et_customerID"/>
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"

        android:layout_marginTop="16dp"
        android:background="@color/grey"
        android:text="Cancel"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btn_search"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_booking_number" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/dark_grey_color"
        android:text="Search"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_cancel"
        app:layout_constraintTop_toBottomOf="@+id/et_booking_number" />

</androidx.constraintlayout.widget.ConstraintLayout>