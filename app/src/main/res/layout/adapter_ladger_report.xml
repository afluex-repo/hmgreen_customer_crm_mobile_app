<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/card_view"
    card_view:cardElevation="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_installment_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingEnd="5dp"
                android:layout_marginRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="@string/bookingnumber"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                card_view:layout_constraintEnd_toStartOf="@+id/srno"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/srno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/srno"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"
                 android:paddingEnd="5dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tv_payment_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:text="@string/plotdetails"
            android:textColor="@color/black"
            android:textSize="12sp"
            card_view:layout_constraintHorizontal_bias="0"
            card_view:layout_constraintEnd_toStartOf="@+id/tv_installment_number"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/llcontainer" />
        <TextView
            android:id="@+id/tv_installment_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:text="@string/plotrate"
            card_view:layout_constraintHorizontal_bias="0"
            android:textColor="@color/black"
            android:textSize="12sp"
            card_view:layout_constraintEnd_toStartOf="@+id/tv_paid_amount"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_payment_mode" />
        <TextView
            android:id="@+id/tv_paid_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:hint="@string/booking_rate"
            android:textSize="12sp"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_payment_mode"
            />
        <TextView
            android:id="@+id/tv_payment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:hint="@string/booking_rate"
            android:textSize="12sp"
            android:paddingBottom="4sp"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_paid_amount"/>
        <TextView
            android:id="@+id/tv_installment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:hint="@string/installment_number"
            android:textSize="12sp"
            android:paddingBottom="4sp"
            card_view:layout_constraintTop_toTopOf="@+id/tv_payment_mode"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
