<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="8dp"
            android:elevation="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/userreply"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="start"
                android:padding="3dp"
                android:weightSum="4"
                android:layout_gravity="start"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textViewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/black"
                        android:text="Title" />
                    <TextView
                        android:id="@+id/textViewAddedDate"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="10sp"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Date" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textViewDescription"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Description" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="0dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/viewReply"
                        android:layout_width="wrap_content"
                        android:text="View Reply"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:textColor="@color/white"
                        android:background="#F300BCD4"
                        android:textAllCaps="false"
                        android:layout_height="35dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/adminreply"
        android:layout_width="match_parent"
        android:orientation="horizontal"
       android:visibility="gone"
       android:background="@drawable/edit_text_border"
        android:weightSum="3"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/replyDate"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Date" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/admintextViewAddedDate"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Date" />
        </LinearLayout>

<LinearLayout
    android:layout_width="0dp"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ReplyimageView"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:background="@drawable/edit_text_border_red"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>
</LinearLayout>

    </LinearLayout>

</LinearLayout>
